.t-headers
  .t-header
    .t-header__main
      .t-header__main__img
        = link_to root_path do
          =image_tag'logo.png', size: "140x40", class: "img"
      .t-header__main__box
        = form_with(url: search_items_path, local: true, method: :get, class: "s-form") do |form| 
          = form.text_field :keyword, placeholder: "キーワードから探す", class: "s-form__text" 
          %label.s-label
            %i.fa.fa-search
              = form.submit class: "s-btn" 
    .t-header__nav
      %ul.t-header__nav__left
        %li.t-header__nav__left--item
          = link_to "#" do
            カテゴリー
        %li.t-header__nav__left--item
          = link_to "#" do
            ブランド
      %ul.t-header__nav__right
        - if user_signed_in?
          %li.t-header__nav__right--item2
            = link_to user_path(current_user.id), class: "a" do
              マイページ
        - else
          %li.t-header__nav__right--item2
            = link_to new_user_session_path, class: "a" do
              ログイン
          %li.t-header__nav__right--item2
            = link_to new_user_registration_path,class: "a" do
              新規会員登録
  .main
    .show-main
      .content
        .content__top
          .item-box
            .item-box__name
              = @item.name
            .item-box__photo
              %span
                = image_tag @item.images.first.src.url,size:"620x443"
                - if @item.images
                  %ul
                    - @item.images.each do |image|
                      %li
                        = image_tag image.src.url,size:"140x97"
            .item-box__price
              ¥
              = @item.price
              .item-box__price__detail
                %span
                  (税込)
                %span
                  送料込み
            .tablebox-title
              = @item.name
            .info-table 
              %table
                %tbody
                  %tr
                    %th
                      出品者
                    %td
                      = link_to do
                        = @item.user.name
                  %tr
                    %th
                      カテゴリー
                    %td
                      = link_to do
                        =@parent.name
                      %br
                      = link_to do
                        =@child.name
                      %br
                      = link_to do
                        =@grandchild.name
      
                  %tr
                    %th
                      ブランド
                    %td
                  %tr
                    %th
                      商品のサイズ
                    %td
                  %tr
                    %th
                      商品の状態
                    %td
                      = link_to do
                        =@condition.name
                  %tr
                    %th
                      配送料の負担	
                    %td
                      = link_to do
                        =@deliverypays.name
                  %tr
                    %th
                      発送元の地域
                    %td
                      = link_to do
                        =@prefecture.name
                  %tr
                    %th
                      発送日の目安	
                    %td
                      = link_to do
                        =@deliverydate.name
            .favorite
              %i.fa.fa-star
              お気に入り
            .buy-box
              .delete-box__btn
                - if user_signed_in? && current_user.id == @item.user_id
                  - if @item.buyer_id.present?
                    = link_to item_path(@item.id), method: :delete do
                      %button#delete-btn 
                        削除する
                  - else
                    .box-btn
                      = link_to edit_item_path(@item.id) do
                        %button#edit-btn
                          編集する
                      = link_to item_path(@item.id), method: :delete do
                        %button#delete-btn-new
                          削除する
                -elsif user_signed_in?
                  -if @item.buyer_id.present?
                  - else
                    .buy-box__btn
                      = link_to confirm_item_path,data: {"turbolinks" => false} do
                        %button#buy-btn 
                          購入する
                - else
                  .buy-box__btn
                    = link_to new_user_registration_path,data: {"turbolinks" => false} do
                      %button#buy-btn 
                        購入する
          .comment-box
            - if current_user
              = form_with(model: [@item, @comment], local: true, id: "new_comment") do |form|
                = form.text_area :text, placeholder: "コメントする", rows: "2",class: "textbox"
                .comment-box__message
                  相手のことを考え丁寧なコメントを心がけましょう。
                  %br
                  不快な言葉遣いなどは利用制限や退会処分となることがあります。
                .comment-box__btn
                  = form.submit "コメントする",id:"comment-btn",class:"form__submit"
            - else
          .commentss
            %a コメント一覧
            .comments
              .comment
                - if @comments
                  - @comments.each do |comment|
                    .comment__box
                      .comment__box__user
                        = comment.user.name
                      .comment__box__text
                        = comment.text 
        .link-page
          .link-page__left
            = link_to "#" do
              %i.fa.fa-angle-left
              前の商品
          .link-page__right
            = link_to "#" do
              後ろの商品
              %i.fa.fa-angle-right
              
        .look-item
          = link_to "#" do
            レディースをもっと見る

.t-contents1
  .t-contents1__box
    %h2.t-contents1__box__title
      だれでも、かんたん、人生を変えるフリマアプリ
    %p.t-contents1__box__text
      今すぐ無料ダウンロード！
    .t-contents1__box__imag
